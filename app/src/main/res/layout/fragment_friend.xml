<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FriendFragment"
    android:fitsSystemWindows="true">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto"
            android:layout_marginLeft="10dp"
            android:padding="6dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/jokowi" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:layout_marginTop="19dp"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/foto"
            android:text="Ir. H. Joko Widodo"
            android:textStyle="bold"
            android:textSize="20sp"
            android:onClick="showToast"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:text="Add Friends"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_addfriend"
            android:layout_below="@id/friend"
            android:layout_width="310dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="Add friends"
            android:drawableTop="@drawable/add_friend"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/daftar_teman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_addfriend"
            android:text="Friends"/>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/daftar_teman"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/friend_recyclerview"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</FrameLayout>